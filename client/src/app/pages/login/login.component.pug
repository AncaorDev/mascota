    div.cs-color-toolbar
    .cs-wrapper
        .cs-content.cs-wancho
            .cs-panel
                mat-card.cs-width.no-padding
                    div(*ngIf="showProgress")
                        //- mat-progress-bar.nino.loading(mode="indeterminate", color = "primary")
                    form([formGroup]="form")
                        .isLoading.cs-input-full
                            mat-form-field.full-width(appearance="fill")
                                //- mat-label Usuario o correo
                                mat-label Usuario
                                input(matInput, placeholder="", formControlName="username", maxlength="50", minlength="5")
                                mat-error(*ngIf="username.errors")
                                    ng-container(*ngIf="username.errors.required; else elseif1") Ingresa tu usuario
                                    ng-template(#elseif1)
                                        ng-container(*ngIf="username.errors.pattern; else elseif2") Caracteres incorrectos
                                    ng-template(#elseif2)
                                        ng-container(*ngIf="username.errors.minlength; else elseif3") Ingresa mínimo 5 caracteres
                                    ng-template(#elseif3)
                                        ng-container(*ngIf="username.errors.maxlength") Ingreso máximo de 50 caracteres
                        .isLoading.cs-input-full
                            mat-form-field.full-width(appearance="fill")
                                mat-label Contraseña
                                input(matInput, [type]="hide ? 'password' : 'text'", placeholder="", formControlName="password", maxlength="20")
                                //- cs-mat-icon.pointer.gray(matSuffix, (click)="hide = !hide", *ngIf="filter", [icono]="hide ? 'round_visibility' : 'round_visibility_off'")
                                mat-error(*ngIf="password.errors")
                                    span(*ngIf="password.errors.required") Ingresa tu contraseña
                                    span(*ngIf="password.errors.minlength") Ingresa mínimo {{ _globals.__MINLENGTH_PASS }} caracteres

                        .isLoading.md
                            a ¿Has olvidado cómo ingresar?
