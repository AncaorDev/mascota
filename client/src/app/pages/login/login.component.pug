	form.login([formGroup]="form")
		label
			mat-form-field.full-width
				mat-label Usuario
				input.user_name(matInput, placeholder="", formControlName="username", maxlength="50", minlength="5")

		label
			mat-form-field.full-width
				mat-label Contraseña
				input.password(matInput, [type]="hide ? 'password' : 'text'", placeholder="", formControlName="password", maxlength="20")
				button.password-button(type="button", (click)="ShowHidePass()") {{ hide ? 'Mostrar' : 'Ocultar' }}
		label.err_login(*ngIf="msj_err")
			span {{ msj_err }}
		button.login-button(type="button", (click)="login()") Iniciar Sesión
		.login-redes
			cs-mat-icon.icon-redes(icon="facebook", size="35px", (click)="socialSignIn(_globals.RedesSociales.FACEBOOK)")
			cs-mat-icon.icon-redes(icon="google", size="35px", (click)="socialSignIn(_globals.RedesSociales.GOOGLE)")
		.cont-post-login
			P ¿Aún no tienes una cuenta?
			a(routerLink="/register") Registrate

